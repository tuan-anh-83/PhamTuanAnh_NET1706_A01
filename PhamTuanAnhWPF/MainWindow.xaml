<Window x:Class="PhamTuanAnhWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamTuanAnhWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Email:" HorizontalAlignment="Left" Height="42" Margin="122,116,0,0" VerticalAlignment="Top" Width="118" FontSize="18"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="42" Margin="122,199,0,0" VerticalAlignment="Top" Width="118" FontSize="18"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="42" Margin="245,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" FontSize="18"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Height="44" Margin="400,291,0,0" VerticalAlignment="Top" Width="93" FontSize="18" Click="btnClose_Click"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Height="44" Margin="276,291,0,0" VerticalAlignment="Top" Width="93" FontSize="18" Click="btnLogin_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="245,0,0,0" VerticalAlignment="Center" Width="248" Height="42" FontSize="18"/>

    </Grid>
</Window>
